package com.example.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.example.model.UserProfile;

@Repository
public interface UserProfileRepository extends JpaRepository<UserProfile, Long> {

	@Modifying
    @Query("UPDATE user_profile u SET u.firstname = :firstname, u.lastname = :lastname,"
    		+ " u.phone_no = :phone_no WHERE u.username = :username")
    int updateFieldsByUsernameWhereNull(String username, String firstname, String lastname,
    		Long phone_no);
}
