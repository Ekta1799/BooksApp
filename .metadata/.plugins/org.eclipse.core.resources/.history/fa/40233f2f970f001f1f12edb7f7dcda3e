package com.books.app.facade;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.books.app.model.ExchangeRequest;
import com.books.app.pojo.BooksResource;
import com.books.app.services.ExchangeRequestService;

@Component
public class ExchangeRequestFacade {
	
	@Autowired
	ExchangeRequestService exchangeRequestService;

	public List<BooksResource> createExchangeRequest(ExchangeRequest exchangeRequest) {

		List<BooksResource> list = service.getAllBooks(exchangeRequest);

		return list;
	}
	
	
	
	
}
