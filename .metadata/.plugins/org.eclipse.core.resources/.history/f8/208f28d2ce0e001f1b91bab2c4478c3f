package com.books.app.model;

import java.util.Objects;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.Id;
import jakarta.persistence.IdClass;
import jakarta.persistence.Table;

@Entity
@Table(name = "user_book_owned_list")
@IdClass(UserBookOwnedListId.class)
public class UserBookOwnedList {

    @Id
    @Column(name = "user_id")
    private Long userId;

    @Id
    @Column(name = "book")
    private String book;

    // Constructors, getters, and setters

    public UserBookOwnedList() {
    }

    public UserBookOwnedList(Long userId, String bookId) {
        this.userId = userId;
        this.book = book;
    }

    public Long getUserId() {
        return userId;
    }

    public void setUserId(Long userId) {
        this.userId = userId;
    }

	@Override
	public int hashCode() {
		return Objects.hash(book, userId);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		UserBookOwnedList other = (UserBookOwnedList) obj;
		return Objects.equals(book, other.book) && Objects.equals(userId, other.userId);
	}
}