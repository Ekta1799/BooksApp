package com.example.repository;

import java.util.Set;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.example.model.UserReadingPreference;

import jakarta.transaction.Transactional;

@Repository
public interface UserReadingPreferenceRepository extends JpaRepository<UserReadingPreference, Integer> {

    @Transactional
    @Modifying
    @Query(value = "INSERT INTO user_reading_preference (user_id, book_id) VALUES (:userId, :bookId)", nativeQuery = true)
    void addUserReadingPreferences(@Param("userId") Long userId, @Param("bookId") Set<Long> bookIds);

}
