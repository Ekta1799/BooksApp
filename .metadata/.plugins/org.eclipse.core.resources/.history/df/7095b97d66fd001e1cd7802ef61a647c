package com.example.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.example.model.UserProfile;

@Repository
public interface UserProfileRepository extends JpaRepository<UserProfile, Long> {

	@Modifying
    @Query("UPDATE user_profile u SET u.field1 = :field1Value, u.field2 = :field2Value WHERE u.username = :username AND (u.field1 IS NULL OR u.field2 IS NULL)")
    int updateFieldsByUsernameWhereNull(String username, String field1Value, String field2Value);
}
